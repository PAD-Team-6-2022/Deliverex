<nav
  class="bg-white flex py-3 px-5 rounded-md border border-slate-200"
  aria-label="Breadcrumb"
>
  <ol class="inline-flex items-center space-x-1 md:space-x-3">
    <% links.forEach(({ name, href }, i) => { %> <% if(i === 0 && i ===
    links.length - 1) { %>
    <li class="inline-flex items-center">
      <div class="inline-flex items-center text-sm font-medium text-slate-400">
        <svg
          class="mr-2 h-5 w-5"
          viewBox="-2 -2 24 24"
          width="24"
          fill="currentColor"
        >
          <path
            d="M18 18V7.132l-8-4.8-8 4.8V18h4v-2.75a4 4 0 1 1 8 0V18h4zm-6 2v-4.75a2 2 0 1 0-4 0V20H2a2 2 0 0 1-2-2V7.132a2 2 0 0 1 .971-1.715l8-4.8a2 2 0 0 1 2.058 0l8 4.8A2 2 0 0 1 20 7.132V18a2 2 0 0 1-2 2h-6z"
          ></path>
        </svg>
        <%= name %>
      </div>
    </li>
    <% } else if(i === 0) { %>
    <li class="inline-flex items-center">
      <a
        href="<%= href %>"
        class="inline-flex items-center text-sm font-medium text-slate-600 hover:text-slate-700"
      >
        <svg
          class="mr-2 h-5 w-5"
          viewBox="-2 -2 24 24"
          width="24"
          fill="currentColor"
        >
          <path
            d="M18 18V7.132l-8-4.8-8 4.8V18h4v-2.75a4 4 0 1 1 8 0V18h4zm-6 2v-4.75a2 2 0 1 0-4 0V20H2a2 2 0 0 1-2-2V7.132a2 2 0 0 1 .971-1.715l8-4.8a2 2 0 0 1 2.058 0l8 4.8A2 2 0 0 1 20 7.132V18a2 2 0 0 1-2 2h-6z"
          ></path>
        </svg>
        <%= name %>
      </a>
    </li>
    <% } else if(i === links.length - 1) { %>
    <li aria-current="page">
      <div class="flex items-center">
        <svg
          class="h-6 w-6 text-slate-400"
          viewBox="-8 -5 24 24"
          width="24"
          fill="currentColor"
        >
          <path
            d="M5.314 7.071l-4.95-4.95A1 1 0 0 1 1.778.707l5.657 5.657a1 1 0 0 1 0 1.414l-5.657 5.657a1 1 0 0 1-1.414-1.414l4.95-4.95z"
          ></path>
        </svg>
        <span class="ml-1 text-sm font-medium text-slate-400 md:ml-2"
          ><%= name %></span
        >
      </div>
    </li>
    <% } else { %>
    <li>
      <div class="flex items-center">
        <svg
          class="h-6 w-6 text-slate-400"
          viewBox="-8 -5 24 24"
          width="24"
          fill="currentColor"
        >
          <path
            d="M5.314 7.071l-4.95-4.95A1 1 0 0 1 1.778.707l5.657 5.657a1 1 0 0 1 0 1.414l-5.657 5.657a1 1 0 0 1-1.414-1.414l4.95-4.95z"
          ></path>
        </svg>
        <a
          href="<%= href %>"
          class="ml-1 text-sm font-medium text-slate-600 hover:text-slate-700 md:ml-2"
          ><%= name %></a
        >
      </div>
    </li>
    <% } %> <% }) %>
  </ol>
</nav>
